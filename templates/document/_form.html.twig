{{ form_start(form) }}
    <div class="btn-group btn-group-sm" role="group" aria-label="Navigation">
        <a class="btn btn-secondary" href="{{ path('document_list') }}" title="Back to documents">
            <span data-feather="chevron-left"></span>
        </a>
        {% if document is defined %}
            <a class="btn btn-secondary" href="{{ path('document_show', { id: document.id }) }}" title="Show document">
                <span data-feather="eye"></span>
            </a>
        {% endif %}
        <button type="submit" class="btn btn-primary">
            <span data-feather="save"></span>
        </button>
    </div>
    <hr />

    <fieldset class="form-group">
        <legend class="h5">Document details</legend>
        {{ include('document/_form_group_row.html.twig', { widget: form.employee }) }}
        {{ include('document/_form_group_row.html.twig', { widget: form.status }) }}
        {{ include('document/_form_group_row.html.twig', { widget: form.type }) }}
    </fieldset>

    <fieldset class="form-group">
        {% if form.travel is defined %}
            <legend class="h5">Travel details</legend>
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.destination }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.purpose }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.dateStart }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.dateEnd }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.departureLeaveTime }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.destinationArrivalTime }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.destinationLeaveTime }) }}
            {{ include('document/_form_group_row.html.twig', { widget: form.travel.departureArrivalTime }) }}
        {% endif %}

        {% if form.reimbursements is defined %}
            <legend class="h5">Reimbursement details</legend>
            {% for reimbursement in form.reimbursements %}
                {{ include('document/_form_group_row.html.twig', { widget: reimbursement.employee }) }}
                {{ include('document/_form_group_row.html.twig', { widget: reimbursement.type }) }}
                {{ include('document/_form_group_row.html.twig', { widget: reimbursement.value }) }}
                {{ include('document/_form_group_row.html.twig', { widget: reimbursement.number }) }}
                {{ include('document/_form_group_row.html.twig', { widget: reimbursement.date }) }}
            {% endfor %}
        {% endif %}
    </fieldset>
{{ form_end(form) }}